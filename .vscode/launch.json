{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Chrome",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
            "skipFiles": ["${workspaceFolder}/node_modules/**/*.js"],

            "sourceMapPathOverrides": {
                "webpack:///node_modules/*": "${workspaceFolder}/node_modules/*"
            }
        }
    ]
}
